<!DOCTYPE html>
<html lang="en" class="no-js">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!--
    Project Name: Onsemble
    Crew: Justin Nguyen, Santiago Paredes, Bunchhieng Soth, Takyui Lo
    Last Updated: March 1, 2016
    -->
    <link rel="icon" type="image/png" href="/assets/img/Onsemble.png">
    <title>
        <% if (title) { %>
        <%= title %>
        <% } %>
    </title>
    <!-- Bootstrap CSS-->
    <link href="/assets/css/bootstrap.css" rel="stylesheet">
    <!-- Custom CSS-->
    <link href="/assets/css/main.css" rel="stylesheet">
    <link href="/assets/css/stage.css" rel="stylesheet" type="text/css"/>
</head>

<body data-spy="scroll" data-target="#menu-section">
<!-- Navigation Bar-->
<div id="menu-section" class="navbar navbar-inverse navbar-fixed-top scroll-me">
    <div class="container">
        <div class="navbar-header">
            <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle"><span
                        class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span></button>
            <a href="/" class="pull-left"><img src="/assets/img/Onsemble-Light.png" class="navbar-logo"></a>
            <p class="nav navbar-text nav-logo"><span style="color: #439756">n</span>semble</p>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/upload">UPLOAD</a></li>
                <li><a href="/discover/">DISCOVER</a></li>
                <li><a href="/stage/">STAGE</a></li>
                <li><a href="/logout/">LOG OUT</a></li>
            </ul>
        </div>
    </div>
</div>


<div id="stage">
    <!-- Home End-->
    <section id="stage-profile" class="container-fluid step-on-stage">
        <div class="col-md-7">
            <div class="profile-img-container">
                <% if (user) { %>
                <img id="pro-pic" src="<%= user[0].profile.picture %>"
                     class="img-thumbnail img-responsive profile-pic "/>
                <% } %>
                <i class="glyphicon glyphicon-camera fa-5x">Update Profile Picture</i>
            </div>
            <dl id="profile-info" class="dl-horizontal lead font-white">
                <dt>Name:</dt>
                <dd>
                    <% if (user) { %>
                    <%= user[0].profile.name %>
                    <% } %>
                </dd>
                <dt>Location:</dt>
                <dd>
                    <% if (user) { %>
                    <%= user[0].profile.location %>
                    <% } %>
                </dd>
                <dt>Followers:</dt>
                <dd>
                    <% if (user) { %>
                    <%= user[0].profile.followers %>
                    <% } %>
                </dd>
                <dt><a href="/following">Followings:</a></dt>
                <dd>
                    <% if (user) { %>
                    <%= user[0].profile.followings %>
                    <% } %>
                </dd>
                <dt>Videos:</dt>
                <dd>
                    <% if (user) { %>
                    <%= user[0].profile.videos.length %>
                    <% } %>
                </dd>
                <button type="button" class="btn btn-info follow">Follow</button>
            </dl>
        </div>
        <div id="spotlight" class="col-md-5">
            <h2 class="spotlight-title text-center font-white">Spotlight</h2>
            <div class="text-center">
                <iframe src="https://www.youtube.com/embed/9c1i7id2zdE" width="425" height="250" frameborder="0"
                        allowfullscreen=""></iframe>
            </div>
        </div>
    </section>
    <section id="releases" class="container-fluid">
        <div>
            <div class="text-center">
                <h3 id="recent-releases" class="font-black">Recent Releases</h3>
                <div class="container">
                    <hr>
                </div>
                <% for(var i = 0; i < 9; i++) { %>
                <div class="col-lg-4 col-md-4">
                    <iframe src="<%= user[0].profile.videos[i] %>" width="400" height="300" frameborder="0"
                            allowfullscreen=""></iframe>
                </div>
                <% } %>
            </div>
        </div>
    </section>
    <div class="container-fluid bg-blk">
        <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2 text-center">
            <div class="social"><a href="#" class="btn button-onsemble btn-onsemble"><i class="fa fa-facebook"></i></a>
                <a href="#" class="btn button-onsemble btn-onsemble"><i class="fa fa-twitter"></i></a> <a href="#"
                                                                                                          class="btn button-onsemble btn-onsemble"><i
                            class="fa fa-google-plus"></i></a> <a href="#" class="btn button-onsemble btn-onsemble"><i
                            class="fa fa-github"></i></a></div>
        </div>
    </div>
</div>
</div>
<script src="/assets/js/jquery-1.11.1.js"></script>
<script src="/assets/js/bootstrap.js"></script>
<script src="/assets/js/main.js"></script>
</body>

</html>
